<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped border">
  <thead class="bg-dark text-white">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Qty</th>
      <th>Qty reserved</th>
      <th>Image link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.qty %></td>
        <td><%= product.qty_reserved %></td>
        <td><%= product.image_link %></td>
        <% if user_signed_in? %>
          <td class="btn-group">
            <%= link_to 'Show', product, class:"btn btn-primary text-white" %>
            <%= link_to 'Edit', edit_product_path(product), class:"btn btn-secondary text-white" %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger text-white" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:"btn btn-dark text-white" %>
