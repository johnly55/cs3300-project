<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control"%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :qty %>
    <%= form.number_field :qty, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :qty_reserved %>
    <%= form.number_field :qty_reserved, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, class:"form-control" %>
  </div>

  <% if @product.image.attached? %>
    <%= image_tag @product.image, style:"width:20rem; display:block;" %>
  <% end %>
  <br>

  <div class="actions">
    <%= form.submit class:"btn btn-dark text-white"%>
  </div>
<% end %>
